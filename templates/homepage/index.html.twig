{% extends 'base.html.twig' %}

{% block title %}
    Domovská stránka
{% endblock %}

{% block body %}

        <h1>
            Vaše auta
            <a href="{{ path('car_add') }}">
                <button>Přidat</button>
            </a>
        </h1>
        <table>
            <tr>
                <th>
                    SPZ
                </th>
                <th>
                    Typ
                </th>
                <th>
                    Počet nehod
                </th>
                <th>
                    Akce
                </th>
            </tr>
            {% for car in cars %}
                <tr>
                    <td>
                        {{ car.licencePlate }}
                    </td>
                    <td>
                        {{ car.type }}
                    </td>
                    <td>
                        {{ car.crashes|length }}
                    </td>
                    <td>
                        <a href="{{ path('car_detail', {'id': car.id}) }}">
                            <button>Zobrazit</button>
                        </a>
                        <a href="{{ path('car_delete', {'id': car.id}) }}">
                            <button>Smazat</button>
                        </a>
                        <a href="{{ path('crash_add', {'car_id': car.id}) }}">
                            <button>Přidat nehodu</button>
                        </a>
                    </td>
                </tr>
        {% endfor %}
    </table>

{% endblock %}
